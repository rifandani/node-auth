<h1 class="mt-4 text-info">Dashboard</h1>
<p class="lead mb-3">
  Welcome <span class="text-danger"><%= user.name %></span>, Your User ID is
  <span class="text-danger"><%= user._id %></span>
</p>
<a href="/users/logout" class="btn btn-info">Logout</a>

<form method="POST" action="/users/delete/{{ <%= user._id %> }}?_method=DELETE">
  <input type="hidden" name="_id" value="<%= user._id %>" />
  <input
    class="btn btn-danger"
    type="submit"
    name="_method"
    value="DELETE ACCOUNT"
  />
</form>

